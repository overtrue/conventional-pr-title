{
  "name": "conventional-pr-title",
  "version": "1.0.0",
  "description": "A GitHub Action that automatically suggests or updates PR titles to follow Conventional Commits standard using AI",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "clean": "rm -rf dist lib",
    "all": "npm run format:write && npm run lint && npm run test && npm run package",
    "dev": "npm run format:write && npm run package",
    "test:quick": "node quick-test.js",
    "test:dev": "npx tsx dev-test.js",
    "test:full": "node test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/overtrue/conventional-pr-title.git"
  },
  "keywords": [
    "github-action",
    "conventional-commits",
    "pull-request",
    "ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@ai-sdk/amazon-bedrock": "^3.0.0",
    "@ai-sdk/anthropic": "^2.0.0",
    "@ai-sdk/assemblyai": "^1.0.0",
    "@ai-sdk/azure": "^2.0.0",
    "@ai-sdk/cerebras": "^1.0.1",
    "@ai-sdk/cohere": "^2.0.0",
    "@ai-sdk/deepgram": "^1.0.0",
    "@ai-sdk/deepinfra": "^1.0.1",
    "@ai-sdk/deepseek": "^1.0.1",
    "@ai-sdk/elevenlabs": "^1.0.0",
    "@ai-sdk/fireworks": "^1.0.1",
    "@ai-sdk/gladia": "^1.0.0",
    "@ai-sdk/google": "^2.0.0",
    "@ai-sdk/google-vertex": "^3.0.2",
    "@ai-sdk/groq": "^2.0.1",
    "@ai-sdk/hume": "^1.0.0",
    "@ai-sdk/lmnt": "^1.0.0",
    "@ai-sdk/mistral": "^2.0.0",
    "@ai-sdk/openai": "^2.0.0",
    "@ai-sdk/perplexity": "^2.0.0",
    "@ai-sdk/provider": "^2.0.0",
    "@ai-sdk/provider-utils": "^3.0.1",
    "@ai-sdk/revai": "^1.0.0",
    "@ai-sdk/togetherai": "^1.0.1",
    "@ai-sdk/xai": "^2.0.1",
    "@anthropic-ai/sdk": "^0.57.0",
    "@openrouter/ai-sdk-provider": "^1.0.0-beta.7",
    "ai": "^5.0.0",
    "ai-sdk-provider-claude-code": "^1.0.0-beta.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.46.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
