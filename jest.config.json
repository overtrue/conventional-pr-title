{
  "preset": "ts-jest/presets/default-esm",
  "extensionsToTreatAsEsm": [
    ".ts"
  ],
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/**/*.test.ts"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts"
  ],
  "coverageReporters": [
    "json-summary",
    "text",
    "lcov"
  ],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "moduleNameMapping": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
